<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_summer"
        android:clickable="true" >

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/march"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/big_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:text="@string/march"/>

                <com.explead.seasons.common.ui.CustomGridView
                    android:id="@+id/grid_march"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="@dimen/more_standard_margin"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/big_margin"
                    android:horizontalSpacing="@dimen/more_standard_margin"/>

                <TextView
                    android:id="@+id/april"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/big_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:text="@string/april"/>

                <com.explead.seasons.common.ui.CustomGridView
                    android:id="@+id/grid_april"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:paddingTop="@dimen/more_standard_margin"
                    android:paddingLeft="@dimen/more_standard_margin"
                    android:paddingRight="@dimen/more_standard_margin"
                    android:paddingBottom="200dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/big_margin"
                    android:horizontalSpacing="@dimen/more_standard_margin"
                    android:clipToPadding="false" />

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/bottom_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_summer_layout"
            android:adjustViewBounds="true" />

    </RelativeLayout>

</layout>

